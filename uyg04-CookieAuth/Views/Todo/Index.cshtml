@{
    ViewData["Title"] = "Index";
}

<h2>Yapılacaklar</h2>
<hr />
<div class="row">
    <div class="col-md-8">
        <table class="table" id="tbTodos">
            <thead>
                <tr>
                    <th>SN</th>
                    <th>Başlık</th>
                    <th>Durumu</th>
                </tr>
            </thead>
            <tbody>
            </tbody>

        </table>

    </div>
    <div class="col-md-4"></div>
</div>






@section Scripts{
    <script>
        $(document).ready(function () {
            LoadTodos();


            function LoadTodos() {

                $.ajax({
                    url: "/Todo/TodoListAjax",
                    type: "Get",
                    data: {},
                    success: function (data) {
                        $.each(data, function (index, item) {
                            var cl = "";
                            var msg = "";
                            if (item.status == 0) {
                                cl = "danger";
                                msg = "Bekliyor"
                            } else {
                                cl = "success";
                                msg = "Tamamlandı"
                            }

                            var todo = '<tr><td>1 </td> <td>' + item.title + '</td><td><span class="badge bg-' + cl + '"> ' + msg + ' </span> </td></tr>';

                            $("#tbTodos tbody").append(todo);
                        });
                    },
                    error: function (e) {
                        console.log(e);
                    },
                });

            }













        });

    </script>
}
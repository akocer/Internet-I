@model List<Product>

<h2>Ürünler</h2>
<a asp-action="Insert" class="btn btn-info">Ürün Ekle</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>SN</th>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>Durumu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    @if (item.Status)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }

                </td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
            i += 1;
        }

    </tbody>
</table>